<%= form_for @recipe do |f| %>
  <%= f.label "Recipe title:" %>
  <%= f.text_field :title %><br/>

  <%# Recipe title: <%= f.text_field :title %><br/>

  <%= f.fields_for :ingredient do |ingredient_field| %>
    <%= ingredient_field.label :name %>
    <%= ingredient_field.text_field :name %><br/>

    <%= ingredient_field.label :quantity %>
    <%= ingredient_field.text_field :quantity %><br/>
  <% end %>

  <%= f.submit %>
<% end %>